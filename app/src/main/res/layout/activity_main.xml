<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/abdef" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="397dp"
        android:layout_height="550dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/card1"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card2"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card3"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card4"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/card5"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card6"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card7"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card8"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/card9"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card10"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card11"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card12"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/card13"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card14"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card15"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />

            <ImageButton
                android:id="@+id/card16"
                android:layout_width="85dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg" />
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/ib_sonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="musicaFondo"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_volume_on" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:srcCompat="@drawable/ic_restart_res" />

</androidx.constraintlayout.widget.ConstraintLayout>